# Actuator
management.endpoints.web.exposure.include = *
management.endpoint.shutdown.enabled = true

# Logging
logging.pattern.console = %d{yyyy-MMM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{15}) - [%msg] %n